<% provide(:title, "Edit User Info") %>

<div class="card shadow mb-4", style="width: 60%">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary" , align = "center">Update Your Profile</h6>
  </div>

  <div class="card-body" align = "center">
    <div class="table-responsive">
      <div class="col-md-6 col-md-offset-3 ">
        <%= form_with(model: @info, local: true) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <%= f.label :nickname %>
          <%= f.text_field :nickname, class: 'form-control' %>
          <%= f.label :school %>
          <%= f.text_field :school, class: 'form-control' %>
    
          <%= f.submit "Save changes", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
